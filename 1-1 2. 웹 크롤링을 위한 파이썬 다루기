# 데이터 종류와 type 함수
a = 123
b = '대한민국'
print(type(a), type(b))
c = 34.4
d = [1,2,3,4,5]
e = {'네이버':'naver', '다음':'daum'}
print(type(c), type(d), type(e))


# dict 객체의 values 함수
print('e.values() : ', e.values())


# dict 객체에 요소추가
e['야후'] = 'yahoo'
print(e)


# print 보간법
age = 34
print('제 나이는 {}살입니다.' .format(age))


# for문
# for i in d:
#     print(i)


# range
# for i in range(10):
#     print(i)


# slice
print('d : ', d)
print('d[0] : ', d[0])
print('d[-1] : ', d[-1])
print('d[2:] : ', d[2:])
print('d[2:-1] : ', d[2:-1])


# def
def print_(string):
    print(string * 2)
    print(string * 5)
print_('대한민국')
def average(a_list):
    k = 0
    for i in d:
        k = k + i
    return k/len(a_list)
print(average(d) + 3)


# os module
import os


# listdir 함수
print(os.listdir())


# file write
f = open('new.txt', 'w', encoding='utf-8')
f.write('나는 배가 고픕니다. 나는 밥을 먹고 싶습니다.')
f.close()
print(os.listdir())


# file read
f = open('new.txt', 'r', encoding='utf-8')
print(f.readlines())
f.close()


# 특정 경로 지정해서 파일 생성
os.chdir(r'C:\DEV\workspace03\ws01_python-test\temp')
f = open('new_and_new.txt', 'w', encoding='utf-8')
f.write('나는 배가 고픕니다. 나는 밥을 먹고 싶습니다.')
f.close()
print(os.listdir())
