# 뷰티풀수프 상용어구
from bs4 import BeautifulSoup  
import requests,re

url = 'https://www.coupang.com/np/search?component=&q=무릎담요&channel=user'
headers = {"User-Agent":'Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/80.0.3987.87 Safari/537.36'}
res = requests.get(url, headers = headers)
soup = BeautifulSoup(res.text, 'html.parser')
# for i in soup.find_all('div', {'class':'name'}):
#     print(i.text)
# for i in soup.find_all('strong', {'class':'price-value'}):
#     print(i.text)
for i in soup.find_all('li',{'class':'search-product'}):
    print(i.find('div',{'class':'name'}).text)
    print(i.find('strong',{'class':'price-value'}).text)
    print(i.find('em',{'class':'rating'}).text)
    print(i.find('span',{'class':'rating-total-count'}).text)
    
